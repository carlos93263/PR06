<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>InsertRegistro</servlet-name>
        <servlet-class>controler.InsertRegistro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidacionLogin</servlet-name>
        <servlet-class>controler.ValidacionLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidacionAdmin</servlet-name>
        <servlet-class>controler.ValidacionAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>mostrar_usuario</servlet-name>
        <servlet-class>controler.mostrar_usuario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertRegistro</servlet-name>
        <url-pattern>/InsertRegistro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidacionLogin</servlet-name>
        <url-pattern>/ValidacionLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidacionAdmin</servlet-name>
        <url-pattern>/ValidacionAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mostrar_usuario</servlet-name>
        <url-pattern>/mostrar_usuario</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
